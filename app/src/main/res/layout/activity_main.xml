<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#181529"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/p1"
        android:background="@color/bluestartcolor"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p2"
        android:layout_marginLeft="5dp"
        android:background="@color/bluestartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p3"
        android:layout_marginLeft="5dp"
        android:background="@color/bluestartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/p4"
        android:background="@color/purpleestartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p5"
        android:layout_marginLeft="5dp"
        android:background="@color/orangeendcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p6"
        android:layout_marginLeft="5dp"
        android:background="@color/greenstartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/p7"
        android:background="@color/pinkestartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p8"
        android:layout_marginLeft="5dp"
        android:background="@color/greenstartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <View
        android:id="@+id/p9"
        android:layout_marginLeft="5dp"
        android:background="@color/pinkestartcolor"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    </LinearLayout>
</LinearLayout>
